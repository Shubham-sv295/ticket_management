<div class="content-wrapper">
   <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <h2><%= @subject.name %></h2>
      <h4>Assigned mangers</h4>
      <% @subject.managers.each do |manager|%>
      <h6><%= manager.name %><%=link_to(remove_manager_admin_subject_path(manager.id,subject: @subject) , method: :delete) do%>
          <i class="fas fa-trash-alt"></i><%end%></h6>
      <% end %>
      <%=link_to('Delete', admin_subject_path(@subject.id) , method: :delete, :class => "button btn btn-danger")%>
      <%=link_to('Edit', edit_admin_subject_path(@subject.id), :class => "button btn btn-info") %>
    </div>
  </div>
</div>
